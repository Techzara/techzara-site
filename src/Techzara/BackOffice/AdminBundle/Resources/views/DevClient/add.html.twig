{% extends 'backoffice/base_admin.html.twig' %}

{% form_theme form 'form/custom_fields.html.twig' %}

{% block title %}{{ parent() }} Ajout Client {% endblock %}

{% set menu_client        = true %}
{% set menu_client_create = true %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="callout callout-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="callout callout-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}
    
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                {{ form_start(form) }}
                    <div class="box-header">
                        <h3 class="box-title">Créer un client</h3>
                    </div>
                    
                    <div class="box-body">
                        {{ form_row(form.cltNomEntreprise) }}
                        {{ form_row(form.cltName) }}
                        {{ form_row(form.cltFirstname) }}
                        {{ form_row(form.cltAddress) }}
                        {{ form_row(form.cltTel) }}
                        {{ form_row(form.cltMdp) }}
                        {{ form_row(form.cltIsValid) }}
                    </div>

                    <div class="box-footer">
                        <input type="submit" class="btn btn-primary" value="Enregistrer" name="new_client"/>
                        <a href="{{ path('client_index') }}"
                           class="btn btn-default pull-left btn-mini-rectif" >
                            Retour à la liste
                        </a>
                    </div>                    
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}